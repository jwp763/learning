<p id="notice"><%= notice %></p>
<div>
  <h1>Specializations</h1>
</div>
<div class="table">
<table border="1em" width="4em" height="3em">
  <thead style="font-size: 1em; color:#222222">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @specializations.each do |specialization| %>
      <tr>
        <td><%= specialization.name %></td>
        <td><%= specialization.description %></td>
        <td><%= specialization.category.name %></td>
        <td><%= link_to 'Show', specialization %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>
</div>
<br>
