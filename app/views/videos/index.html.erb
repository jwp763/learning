<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Link</th>
      <th>Description</th>
      <th>Specialization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= video.link %></td>
        <td><%= video.description %></td>
        <td><%= video.specialization.name %></td>
        <td><%= link_to 'Show', video %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
