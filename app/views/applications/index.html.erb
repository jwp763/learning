<p id="notice"><%= notice %></p>

<h1>Applications</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Story</th>
      <th>Specialization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= link_to "#{application.title}", application %></td>
        <td><%= application.story %></td>
        <td><%= application.specialization.name %></td>
        <td><%= link_to 'Show', application %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
